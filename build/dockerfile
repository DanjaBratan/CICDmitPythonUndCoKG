FROM python:3.10

LABEL Name="Python Flask Nutzerverwaltung und Notizen App" Version=1.0.0
LABEL org.opencontainers.image.source = "https://github.com/DanjaBratan/CICDmitPythonUndCoKG"

ARG srcDir=src
WORKDIR /website
COPY $srcDir/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY $srcDir/main.py .
COPY $srcDir/website ./website
COPY $srcDir/instance ./instance

EXPOSE 5000

CMD ["gunicorn", "-b", "0.0.0.0:5000", "main:website"]
